<main class="main bg-home">

  <section class="main-wrap full-site-width">
    <div class="main-post" style="margin-top:0">
      {{#foreach posts}}
      <div class="ps">
        {{!-- Post Loop Content --}}
        <article class="ps-inner">
          {{!-- Tags --}}
          {{#if tags}}<div class="ps-tags hidden-on-small-screen">{{#foreach tags}}<a href="{{url}}" class="btn" title={{name}}>{{name}}</a>{{/foreach}}</div>{{/if}}
          {{!-- post content --}}
          <div class="ps-content">
            {{!-- Add img Cover --}}
            {{#if image}}<span><a href="{{url}}" class="ps-thumb"><img src="{{image}}" alt="{{title}}"/></a></span>{{/if}}
            {{!-- post Title --}}
            <a class="ps-title" href="{{url}}"><h2>{{title}}</h2></a>
            {{!-- post author & datetime--}}
            <div class="ps-byline">
              <time class="timestamp" datetime="{{date format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time>
              by {{#author}}<a href="{{url}}" title="{{name}}" class="author">{{name}}</a>{{/author}}
            </div>
            {{!-- Post excerpt --}}
            <p class="ps-excerpt hidden-on-small-screen">{{excerpt characters="260"}} <a class="read-more" href="{{url}}">Read More</a></p>
            {{!-- Share Post --}}
            <aside class="share hidden-on-small-screen">
              <a class="btn icon-comment" href="{{url absolute="true"}}#comments"><span class="ps-comment-count fb-comments-count" data-href="{{url absolute="true"}}"></span></a>
              <a class="btn icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"></a>
              <a class="btn icon-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"></a>
            </aside>
          </div>
        </article>
      </div>
      {{/foreach}}
      {{! -- Add Pagination -- }}
      {{pagination}}
    </div>

    {{!-- Add Sidebar --}}
    {{> "sidebar"}}

  </section>

</main>
